<!DOCTYPE html>
<html>
<head>
<script type="text/javascript" src="jquery-1.11.3.js">
</script>
<script type="text/javascript">
var i=0;
$(document).ready(function () 
{
$("#but1").click(function () 
   {
	
      while (i<5)
          {
              i++;
              $("p:odd").fadeIn();
              $("p:even").fadeIn();
              $("p:odd").delay(2000).fadeOut();
           }
     while ((i>=5) && (i<9))
           {
              i++;
              $("p:odd").fadeIn();
              $("p:even").fadeIn();
              $("p:even").delay(2000).fadeOut(2000);
           }
   });

});
</script>
</head>

